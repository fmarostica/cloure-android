<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modules.banks.BankAddActivity">
  <android.support.constraint.ConstraintLayout
      android:id="@+id/activity_add_bank_toolbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/activity_add_bank_btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_check_black_24dp" />
  </android.support.constraint.ConstraintLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/activity_add_bank_txtNameContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_add_bank_toolbar">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/activity_add_bank_txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/activity_add_bank_txtOnlineBankingUrlContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_add_bank_txtNameContainer">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/activity_add_bank_txtOnlineBankingUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DirecciÃ³n web del online banking" />
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
      android:id="@+id/activity_add_bank_txtWebContainer"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_add_bank_txtOnlineBankingUrlContainer">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/activity_add_bank_txtWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sitio web" />
  </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>